#include<stdio.h>
int main()
{
    int n;
    int i;
    int sum=0;
    printf("enter any number:");
    scanf("%d",&n);
    for(i=1;i<=n/2;i++)
    {
        sum=sum+i;
    }
    if(sum==n)
    {
        printf("\n the given number is perfectt:");
    }
    else
    {
        printf("\n the given number is not perfect");
    }
}
